<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Hangman!</title>
    <link rel="stylesheet" href="/css/main.css">
    {{#css}}
      {{#easy}}<link rel="stylesheet" href="/css/easy.css">{{/easy}}
      {{#medium}}<link rel="stylesheet" href="/css/medium.css">{{/medium}}
      {{#hard}}<link rel="stylesheet" href="/css/hard.css">{{/hard}}
      {{#nightmare}}<link rel="stylesheet" href="/css/nightmare.css">{{/nightmare}}
      {{#torture}}<link rel="stylesheet" href="/css/torture.css">{{/torture}}
    {{/css}}
    <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <div class="word">
        <h1>Your word to guess:</h1>
        {{#word}}
          <div class="letter">
            <p>{{display}}</p>
          </div>
        {{/word}}
      </div>

      <div class="guesses">
        <h3>You have {{guesses}} guesses left</h3>
      </div>

      <div class="keyboard">
        {{#keys}}
        <div class="key-row">
          {{#row1}}
          {{^guessed}}
          <form action="/game/keypressed" method="post">
            <button class= "not-guessed" type="submit" name="key" value={{id}} style="background-color">{{keyvalue}}</button>
          </form>
          {{/guessed}}
          {{#guessed}}
          <button type="button" name="button" class="guessed" style="background-color: #555; color= white;">{{keyvalue}}</button>
          {{/guessed}}
          {{/row1}}
        </div>
        <div class="key-row">
          {{#row2}}
          {{^guessed}}
          <form action="/game/keypressed" method="post">
            <button class= "not-guessed" type="submit" name="key" value={{id}}>{{keyvalue}}</button>
          </form>
          {{/guessed}}
          {{#guessed}}
          <button type="button" name="button" class="guessed" style="background-color: #555; color= white;">{{keyvalue}}</button>
          {{/guessed}}
          {{/row2}}
        </div>
        <div class="key-row">
          {{#row3}}
          {{^guessed}}
          <form action="/game/keypressed" method="post">
            <button class= "not-guessed" type="submit" name="key" value={{id}}>{{keyvalue}}</button>
          </form>
          {{/guessed}}
          {{#guessed}}
          <button type="button" name="button" class="guessed" style="background-color: #555; color= white;">{{keyvalue}}</button>
          {{/guessed}}
          {{/row3}}
        </div>
        {{/keys}}
      </div>

    </div>

    <!-- AUDIO TO PLAY -->
  </body>
</html>
