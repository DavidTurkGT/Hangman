          </form>
          {{/guessed}}
          {{#guessed}}
          <button type="button" name="button" style="background-color:red">{{keyvalue}}</button>
          {{/guessed}}
        {{/row2}}
      </div>
      <div class="key-row">
        {{#row3}}
          {{^guessed}}
          <form action="/keypressed" method="post">
            <button type="submit" name="key" value={{id}}>{{keyvalue}}</button>
          </form>
          {{/guessed}}
          {{#guessed}}
          <button type="button" name="button" style="background-color:red">{{keyvalue}}</button>
          {{/guessed}}
        {{/row3}}
      </div>
      {{/keys}}
    </div>
  </body>
</html>
